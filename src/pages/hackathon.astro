---
import Container from "../components/Container.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="PartyRock Hackathon">
  <main class="space-y-20">
    <Container>
      <div
        class="relative flex flex-col-reverse justify-center items-center md:flex-row"
        id="hero"
      >
        <div class="row items-center py-5 md:pb-20 md:pt-10">
          <div class="text-center space-y-10">
            <h2 class="text-5xl font-medium leading-none md:text-6xl">
              Partyrock <br /> Hackathon! <br />
            </h2>
            <p class="mt-6 mb-8 text-xl font-normal leading-7 sm:mb-12">
              Menangkan Hadiah menarik saat mengikuti hackathon kami!
            </p>
            <a
              class="px-9 py-5 bg-zinc-900 hover:bg-white text-white hover:text-black border rounded-2xl justify-items-center md:justify-items-start gap-2.5 inline-flex"
              rel="noopener noreferrer"
              href="https://github.com/manulthanura/Positivus"
              target="_blank"
            >
              <h2 class="text-center text-xl font-normal leading-7">
                Daftar Disini
              </h2>
            </a>
          </div>
        </div>
      </div>

      <div
        class="h-[310px] p-12 bg-zinc-100 rounded-[45px] shadow-card border border-black justify-between items-center flex text-black"
      >
        <div class="flex-col justify-center items-start gap-[93px] inline-flex">
          <div class="flex-col justify-start items-start flex">
            <div
              class="px-[7px] bg-lime-300 rounded-[7px] flex-col justify-start items-start gap-2.5 flex"
            >
              <div class="text-3xl font-medium">Juara 1</div>
            </div>
          </div>
          <a class="justify-start items-center gap-[15px]">
            <div class="text-xl font-normal leading-7">Ipad</div>
            <div class="text-xl font-normal leading-7">Handphone</div>
          </a>
        </div>
      </div>
    </Container>
  </main>
</Layout>
